<UserControl x:Class="ArcGISApp1.Controls.FeatureTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArcGISApp1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,0,0,0">
        <Menu x:Name="myMenu" HorizontalAlignment="Left" Height="23" Margin="0,0,0,0" VerticalAlignment="Top" Width="{Binding ElementName=myUserControl, Path=Width}">
            <Button x:Name="myStart" Content="开始"/>
            <Button x:Name="myChoose" Content="选择"/>
        </Menu>
    </Grid>
</UserControl>
