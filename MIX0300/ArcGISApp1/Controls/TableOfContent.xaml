<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArcGISApp1.Controls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Name="myUserControl" x:Class="ArcGISApp1.Controls.TableOfContent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="50" Loaded="myUserControl_Loaded">
    <Grid>
        <ListBox x:Name="myLayerList" Width="{Binding Width, ElementName=myUserControl}" PreviewMouseMove="LBoxSort_OnPreviewMouseMove" Drop="LBoxSort_OnDrop" AllowDrop="True" Visibility="Visible" PreviewDragOver="LBoxSort_PreviewDragOver" PreviewDragLeave="LBoxSort_PreviewDragLeave"/>
    </Grid>
</UserControl>
